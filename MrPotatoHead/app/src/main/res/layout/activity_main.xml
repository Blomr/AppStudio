<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/body"
        android:id="@+id/body"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arms"
        android:id="@+id/arms"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ears"
        android:id="@+id/ears"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eyebrows"
        android:id="@+id/eyebrows"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eyes"
        android:id="@+id/eyes"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/glasses"
        android:id="@+id/glasses"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hat"
        android:id="@+id/hat"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mouth"
        android:id="@+id/mouth"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mustache"
        android:id="@+id/mustache"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nose"
        android:id="@+id/nose"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shoes"
        android:id="@+id/shoes"
        android:visibility="invisible"/>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:rowCount="3"
        android:columnCount="5"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="arms"
            android:textSize="10sp"
            android:id="@+id/cb_arms"
            android:onClick="onCheckboxClicked"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ears"
            android:textSize="10sp"
            android:id="@+id/cb_ears"
            android:onClick="onCheckboxClicked"/>/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="eyebrows"
            android:textSize="10sp"
            android:id="@+id/cb_eyebrows"
            android:onClick="onCheckboxClicked"/>/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="eyes"
            android:textSize="10sp"
            android:id="@+id/cb_eyes"
            android:onClick="onCheckboxClicked"/>/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="glasses"
            android:textSize="10sp"
            android:id="@+id/cb_glasses"
            android:onClick="onCheckboxClicked"/>/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hat"
            android:textSize="10sp"
            android:id="@+id/cb_hat"
            android:onClick="onCheckboxClicked"/>/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mouth"
            android:textSize="10sp"
            android:id="@+id/cb_mouth"
            android:onClick="onCheckboxClicked"/>/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mustache"
            android:textSize="10sp"
            android:id="@+id/cb_mustache"
            android:onClick="onCheckboxClicked"/>/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nose"
            android:textSize="10sp"
            android:id="@+id/cb_nose"
            android:onClick="onCheckboxClicked"/>/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shoes"
            android:textSize="10sp"
            android:id="@+id/cb_shoes"
            android:onClick="onCheckboxClicked"/>/>

    </GridLayout>
</RelativeLayout>
